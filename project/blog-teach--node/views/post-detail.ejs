<%- include("./com/header") %> 

 <div class="container post">
    <%- include("./com/post-content") %> 

        <!-- 留言区域 -->
        <div class="row comment">
            <!-- 留言区域 -->
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">留言</div>
                    <div class="panel-body">

                        <!-- 每一条评论是一个媒体对象=======接收已发表内容 -->
                         
                         <% comments.forEach(element => { %>
                            <%- include('./com/comment', {comment: element}) %>
                        <% }) %>
                    
                    </div>
                    <!-- 面板底部 -->
                    <!-- <div class="panel-footer clearfix">
                    </div> -->
                    <div class="panel-footer clearfix">
                        <form action="/comments/<%= post._id %>" method="POST">
                            <div class="form-group">
                                <textarea type="text" rows="1" class="form-control" id="content" name="content"
                                    placeholder="留言区"></textarea>
                            </div>
                            <button type="submit" class="btn btn-info form-control">发表留言</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>



<%- include("./com/footer") %> 