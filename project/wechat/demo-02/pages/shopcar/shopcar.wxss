.shopcar{
  width: 100%;
}
.shopcar .item{
  width: 100%;
}
.shopcar .item .dl{
  width: 100%;
  background: #f0f0f0;
}
.shopcar .item .dl .list{
  width: 100%; 
  height: 200px;
}
.shopcar .item .dl .list image{
  width: 90px;
  height: 90px;
  display: block;
  margin: 20px auto;

}
.shopcar .item .dl .list .txt{
  display: block;
  text-align: center;
  color: rgb(153, 149, 149);
}
.shopcar .item .dl .list button{
  width:80px;
  display: block;
  margin: 20px auto;
}
/* 优惠券区 */
.shopcar .item .cheap{
  width: 100%;
}
.shopcar .item .cheap .getcheap{
  margin-top: 20px;
  width: 100%;
}
.shopcar .item .cheap .getcheap .txt{
  display: inline-block
}
.shopcar .item .cheap .getcheap button{
  display: block;
  width: 80px;
  float: right;
  font-size: 11px;
  border-radius: 15px;
  right: 5px;

}
.shopcar .item .cheap .getcheap .card{
  display: inline-block;
  width: 100%;
}
.shopcar .item .cheap .getcheap .card button{
  width: 30%;
  margin: 20px 5px 0 5px;
  border-radius: 0;

}
/* 秒杀场 */
.shopcar .item .act{
  width: 100%;
}
.shopcar .item .act .top{
  width: 100%;
  height: 200px;
  background: #f0f0f0;
}
.shopcar .item .act .top .title{
  color: rgb(119, 115, 115);
  margin-top: 20px;
}
.shopcar .item .act .top .title::before{
  content: "------------------"
}
.shopcar .item .act .top .title::after{
  content: "------------------"
}
.shopcar .item .act .top .seckill_act{
  width: 94%;
  background: white;
  margin: 0 auto;
}
.shopcar .item .act .top .seckill_act .txt{
  margin-left: 10px;
  float:left;
}
.shopcar .item .act .top .seckill_act .timeout{
  float: left;
  margin-left: 5px;
}
.shopcar .item .act .top .seckill_act .timeout view{
  float: left;
  display: block;
}

/* 商品秒杀列表 */
.shopcar .item .act .top .act_list{
  width: 100%;
}
.shopcar .item .act .top .act_list .item{
  display: flex;
  text-align: center;
}
.shopcar .item .act .top .act_list .item navigator{
  width: 100%;
  display: block;
}
.shopcar .item .act .top .act_list .item image{
  margin-top: 10px;
  flex: 1;
  width: 100px;
  height: 100px;
  border-right:1px solid #ccc; 
}
.shopcar .item .act .top .act_list .item .new_price{
  color: red;
  display: block;
  font-size: 12px;
}
.shopcar .item .act .top .act_list .item .old_price{
  text-decoration: line-through;
  font-size: 12px;
}


